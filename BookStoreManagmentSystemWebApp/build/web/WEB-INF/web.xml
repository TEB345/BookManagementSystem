<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>StartSessionServlet</servlet-name>
        <servlet-class>za.ac.tut.web.StartSessionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminServlet</servlet-name>
        <servlet-class>za.ac.tut.web.AdminServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddBookServlet</servlet-name>
        <servlet-class>za.ac.tut.web.AddBookServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditBookServlet</servlet-name>
        <servlet-class>za.ac.tut.web.EditBookServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RemoveBookServlet</servlet-name>
        <servlet-class>za.ac.tut.web.RemoveBookServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewBooksServlet</servlet-name>
        <servlet-class>za.ac.tut.web.ViewBooksServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchForBookServlet</servlet-name>
        <servlet-class>za.ac.tut.web.SearchForBookServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>za.ac.tut.web.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RentBookServlet</servlet-name>
        <servlet-class>za.ac.tut.web.RentBookServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StartSessionServlet</servlet-name>
        <url-pattern>/StartSessionServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminServlet</servlet-name>
        <url-pattern>/AdminServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddBookServlet</servlet-name>
        <url-pattern>/AddBookServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditBookServlet</servlet-name>
        <url-pattern>/EditBookServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RemoveBookServlet</servlet-name>
        <url-pattern>/RemoveBookServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewBooksServlet</servlet-name>
        <url-pattern>/ViewBooksServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchForBookServlet</servlet-name>
        <url-pattern>/SearchForBookServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RentBookServlet</servlet-name>
        <url-pattern>/RentBookServlet.do</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <security-constraint>
        <display-name>AdminConstraint</display-name>
        <web-resource-collection>
            <web-resource-name>AdminResources</web-resource-name>
            <description>Resources accessible to the admin</description>
            <url-pattern>/add_books.jsp</url-pattern>
            <url-pattern>/added_book_outcome.jsp</url-pattern>
            <url-pattern>/edit_books.jsp</url-pattern>
            <url-pattern>/edited_book_outcome.jsp</url-pattern>
            <url-pattern>/remove_books.jsp</url-pattern>
            <url-pattern>/removed_book_outcome.jsp</url-pattern>
            <url-pattern>/AddBookServlet.do</url-pattern>
            <url-pattern>/EditBookServlet.do</url-pattern>
            <url-pattern>/RemoveBookServlet.do</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description>Enable authentication of admin</description>
            <role-name>admin</role-name>
        </auth-constraint>
    </security-constraint>
    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>BRealm</realm-name>
        <form-login-config>
            <form-login-page>/login.jsp</form-login-page>
            <form-error-page>/loginError.jsp</form-error-page>
        </form-login-config>
    </login-config>
    <security-role>
        <description>Admin can add,edit and remove a book
</description>
        <role-name>admin</role-name>
    </security-role>
</web-app>
